<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhoneBook.Views.ItemPage"
             Title="{Binding ., Converter={StaticResource ItemViewModelToTitleConverter}}"
             xmlns:converters="clr-namespace:PhoneBook.Converters">
    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="10"
                             VerticalOptions="StartAndExpand">

            <Label Text="Id" />
            <Label Text="{Binding ID}" />

            <Label Text="Прізвище" />
            <Entry Text="{Binding LastName}" />
            
            <Label Text="Ім'я" />
            <Entry Text="{Binding FirstName}" />

            <Label Text="Телефон" />
            <Entry Text="{Binding Phone}" />

            <Label Text="Опис" />
            <Entry Text="{Binding Description}" />


            <Button Text="Зберегти" Command="{Binding SaveCommand}"/>
            <Button Text="Видалити" Command="{Binding DeleteCommand}"/>
            <Button Text="Відміна" Command="{Binding CancelCommand}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>